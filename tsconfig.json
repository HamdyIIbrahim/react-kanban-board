{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "replacePaths.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}